extends base.pug

block content 
    if errorMessage
        span #{errorMessage}
    form(method="POST" enctype="multipart/form-data")
        label(for="video") Video File 
        input(type="file" name="video" id="video" accept="video/*" required)
        input(type="text", name="title", maxlength=80, placeholder="Video Title", required)
        input(type="text", name="description", minlength=20, placeholder="Description", required)
        input(type="text", name="hashtags", placeholder="Hashtags, separated by comma.", required)
        input(type="submit", value="Upload Video")