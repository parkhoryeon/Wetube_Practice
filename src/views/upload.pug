extends base.pug

block content 
    if errorMessage
        span #{errorMessage}
    form(method="POST")
        input(name="title", type="text", maxlength=80, placeholder="Title", required)
        input(name="description", type="text", minlength=20, placeholder="Description", required)
        input(name="hashtags", type="text", placeholder="Hashtags, separated by comma.", required)
        input(type="submit", value="Upload Video")